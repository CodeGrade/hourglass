<% files.each do |file| %>
  <div class="card">
    <% if file.is_a? String then %>
      <% filename = file %>
      <% lang = "text/x-java" %>
    <% else %>
      <% filename = file["filename"] %>
      <% lang = file["lang"] %>
    <% end %>
    <h2>File: <%= filename %></h2>
    <%
      contents = File.read(Rails.root.join("public", filename))
    %>
    <%= render "exams/codemirror", lang: lang, readonly: true, contents: contents %>
  </div>
  <hr>
<% end %>