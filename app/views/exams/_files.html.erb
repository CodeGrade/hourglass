<% files.each do |file| %>
  <div class="card">
    <% if file.is_a? String then %>
      <% filename = file %>
      <% lang = "text/x-java" %>
    <% else %>
      <% filename = file["filename"] %>
      <% lang = file["lang"] %>
    <% end %>
    <h2>File: <%= filename %></h2>
    <textarea class="codemirror-textarea" data-file="<%= filename %>" data-lang="<%= lang %>"></textarea>
  </div>
  <hr>
<% end %>