<% @part += 1 %>
<div class="row part card">
  <div class="col-12">
    <h3>Part <%= @part %>: <%= part["name"] %></h3>
    <h4>This part is worth <%= part["points"] %> points.</h4>
    <p><%= part["description"]&.html_safe %></p>
    <%= render "files", files: part["files"] if part["files"] %>
    <% @bodyitem = 0 %>
    <% part["body"].each do |item| %>
      <% @current = "#{@question}_#{@part}_#{@bodyitem}" %>
      <hr>
      <%= render "bodyitem", item: item %>
    <% end %>
  </div>
</div>