<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% default_page_title = "#{params[:controller]} / #{params[:action]}" %>
    <title><%= @page_title || default_page_title %> - Hourglass</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_tag do %>
        <%= render 'exams/lockdown.js' %>
    <% end %>
  </head>

  <body>
  <%=  render "layouts/navbar"  %>
  <% unless flash.empty? %>
    <%= render "layouts/flash" %>
  <% end %>
  <% if content_for?(:wide_content) %>
  <div class="container-fluid">
    <% if content_for?(:wide_content_before) %>
    <!-- Before wide content -->
    <div class="container">
  <%= yield(:wide_content_before) %>
    </div>
    <% end %>
    <!-- Wide content -->
  <%= yield(:wide_content) %>
    <% if content_for?(:wide_content_after) %>
    <!-- After wide content -->
    <div class="container">
  <%= yield(:wide_content_after) %>
    </div>
    <% end %>
  </div>
  <% else %>
  <div class="container mt-f">
    <%= content_for?(:content) ? yield(:content) : yield %>
  </div>
  <% end %>
  </body>
</html>
