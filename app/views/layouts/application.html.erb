<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% default_page_title = "#{params[:controller]} / #{params[:action]}" %>
    <title><%= @page_title || default_page_title %> - Hourglass</title>

    <%= stylesheet_pack_tag 'application', 'bootstrap', media: 'all' %>
    <%= javascript_pack_tag 'application', 'bootstrap' %>

    <%= favicon_pack_tag 'site-icon.png', id: 'favicon' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
