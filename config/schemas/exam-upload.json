{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://hourglass.ccs.neu.edu/schemas/exam-upload#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "policies",
    "contents"
  ],
  "properties": {
    "policies": { "$ref": "#/definitions/Policies" },
    "contents": { "$ref": "#/definitions/Version" }
  },
  "definitions": {
    "HTML": { "type": "string" },
    "Policies": {
      "type": "array",
      "items": { "$ref": "#/definitions/Policy" }
    },
    "Policy": {
      "type": "string",
      "enum": ["IGNORE_LOCKDOWN", "TOLERATE_WINDOWED"]
    },
    "Version": {
      "type": "object",
      "additionalProperties": false,
      "required": ["questions"],
      "properties": {
        "instructions": { "$ref": "#/definitions/HTML" },
        "questions": { "$ref": "#/definitions/Questions" },
        "reference": { "$ref": "#/definitions/FileDirs" }
      }
    },
    "Questions": {
      "type": "array",
      "items": { "$ref": "#/definitions/Question" },
      "minItems": 1
    },
    "Question": {
      "type": "object",
      "additionalProperties": false,
      "required": ["parts"],
      "properties": {
        "name": { "type": "string" },
        "description": { "$ref": "#/definitions/HTML" },
        "separateSubparts": { "type": "boolean" },
        "parts": { "$ref": "#/definitions/Parts" },
        "reference": { "$ref": "#/definitions/FileDirs" }
      }
    },
    "Parts": {
      "type": "array",
      "items": { "$ref": "#/definitions/Part" },
      "minItems": 1
    },
    "Part": {
      "type": "object",
      "additionalProperties": false,
      "required": ["body", "points"],
      "properties": {
        "name": { "type": "string" },
        "description": { "$ref": "#/definitions/HTML" },
        "points": { "type": "number" },
        "body": { "$ref": "#/definitions/BodyItems" },
        "reference": { "$ref": "#/definitions/FileDirs" },
        "rubric": { "$ref": "#/definitions/Rubrics" }
      }
    },
    "Rubrics": {
      "type": "array",
      "items": { "$ref": "#/definitions/Rubric" }
    },
    "Rubric": {
      "anyOf": [
        { "$ref": "#/definitions/ItemRubric" },
        { "$ref": "#/definitions/ConditionalRubric" }
      ]
    },
    "ConditionalRubric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["condition", "rubrics"],
      "properties": {
        "condition": { "$ref": "#/definitions/HTML" },
        "rubrics": { "$ref": "#/definitions/Rubrics" }
      }
    },
    "ItemRubric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["points", "label", "description"],
      "properties": {
        "points": { "type": "number" },
        "description": { "$ref": "#/definitions/HTML" },
        "label": { "type": "string" },
        "mercy": {
          "type": "object",
          "additionalProperties": false,
          "required": ["scope", "limit"],
          "properties": {
            "scope": { "enum": ["exam", "question", "part"] },
            "limit": { "type": "number" }
          }
        },
        "presets": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["description", "points"],
            "properties": {
              "points": { "type": "number" },
              "description": { "$ref": "#/definitions/HTML" }
            }
          }
        }
      }
    },
    "FileDirs": {
      "type": "array",
      "items": { "$ref": "#/definitions/FileDir" }
    },
    "FileDir": {
      "oneOf": [
        { "$ref": "#/definitions/File" },
        { "$ref": "#/definitions/Dir" }
      ]
    },
    "File": {
      "type": "object",
      "additionalProperties": false,
      "required": ["file"],
      "properties": {
        "file": { "type": "string" }
      }
    },
    "Dir": {
      "type": "object",
      "additionalProperties": false,
      "required": ["dir"],
      "properties": {
        "dir": { "type": "string" }
      }
    },
    "BodyItems": {
      "type": "array",
      "items": { "$ref": "#/definitions/BodyItem" }
    },
    "BodyItem": {
      "oneOf": [
        { "$ref": "#/definitions/HTML" },
        { "$ref": "#/definitions/Response" }
      ]
    },
    "Response": {
      "oneOf": [
        { "$ref": "#/definitions/Code" },
        { "$ref": "#/definitions/YesNo" },
        { "$ref": "#/definitions/TrueFalse" },
        { "$ref": "#/definitions/MultipleChoice" },
        { "$ref": "#/definitions/Matching" },
        { "$ref": "#/definitions/AllThatApply" },
        { "$ref": "#/definitions/CodeTag" },
        { "$ref": "#/definitions/Text" }
      ]
    },
    "Code": {
      "type": "object",
      "additionalProperties": false,
      "required": ["Code"],
      "properties": {
        "Code": {
          "type": "object",
          "additionalProperties": false,
          "required": ["lang"],
          "properties": {
            "prompt": { "$ref": "#/definitions/HTML" },
            "lang": { "type": "string" },
            "initial": { "$ref": "#/definitions/CodeInitial" },
            "rubric": { "$ref": "#/definitions/Rubrics" }
          }
        }
      }
    },
    "CodeInitial": {
      "oneOf": [
        { "$ref": "#/definitions/File" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["code"],
          "properties": {
            "code": { "type": "string" }
          }
        }
      ]
    },
    "YesNo": {
      "type": "object",
      "additionalProperties": false,
      "required": ["YesNo"],
      "properties": {
        "YesNo": {
          "oneOf": [
            { "type": "boolean" },
            { "$ref": "#/definitions/YesNoPrompt" }
          ]
        }
      }
    },
    "YesNoPrompt": {
      "type": "object",
      "additionalProperties": false,
      "required": ["correctAnswer"],
      "properties": {
        "prompt": { "$ref": "#/definitions/HTML" },
        "correctAnswer": { "type": "boolean" },
        "rubric": { "$ref": "#/definitions/Rubrics" }
      }
    },
    "TrueFalse": {
      "type": "object",
      "additionalProperties": false,
      "required": ["TrueFalse"],
      "properties": {
        "TrueFalse": {
          "oneOf": [
            { "type": "boolean" },
            { "$ref": "#/definitions/TrueFalsePrompt" }
          ]
        }
      }
    },
    "TrueFalsePrompt": {
      "type": "object",
      "additionalProperties": false,
      "required": ["correctAnswer"],
      "properties": {
        "prompt": { "$ref": "#/definitions/HTML" },
        "correctAnswer": { "type": "boolean" },
        "rubric": { "$ref": "#/definitions/Rubrics" }
      }
    },
    "MultipleChoice": {
      "type": "object",
      "additionalProperties": false,
      "required": ["MultipleChoice"],
      "properties": {
        "MultipleChoice": {
          "type": "object",
          "additionalProperties": false,
          "required": ["options", "correctAnswer"],
          "properties": {
            "prompt": { "$ref": "#/definitions/HTML" },
            "options": { "$ref": "#/definitions/Options" },
            "correctAnswer": { "$ref": "#/definitions/MultipleChoiceAnswer" },
            "rubric": { "$ref": "#/definitions/Rubrics" }
          }
        }
      }
    },
    "MultipleChoiceAnswer": {
      "type": "number",
      "minimum": 0,
      "$comment": "can't enforce the max-range constraint here"
    },
    "Options": {
      "type": "array",
      "items": { "$ref": "#/definitions/HTML" }
    },
    "Matching": {
      "type": "object",
      "additionalProperties": false,
      "required": ["Matching"],
      "properties": {
        "Matching": {
          "type": "object",
          "additionalProperties": false,
          "required": ["prompts", "values", "correctAnswers"],
          "properties": {
            "promptsLabel": { "$ref": "#/definitions/HTML" },
            "valuesLabel": { "$ref": "#/definitions/HTML" },
            "prompts": { "$ref": "#/definitions/Options" },
            "values": { "$ref": "#/definitions/Options" },
            "correctAnswers": { "$ref": "#/definitions/MatchingAnswers" },
            "rubric": { "$ref": "#/definitions/Rubrics" }
          }
        }
      }
    },
    "MatchingAnswers": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": -1,
        "$comment": "can't enforce the max-range constraint here"
      }
    },
    "AllThatApply": {
      "type": "object",
      "additionalProperties": false,
      "required": ["AllThatApply"],
      "properties": {
        "AllThatApply": {
          "type": "object",
          "additionalProperties": false,
          "required": ["options"],
          "properties": {
            "prompt": { "$ref": "#/definitions/HTML" },
            "options": { "$ref": "#/definitions/ATAOptions" },
            "rubric": { "$ref": "#/definitions/Rubrics" }
          }
        }
      }
    },
    "ATAOptions": {
      "type": "array",
      "items": { "$ref": "#/definitions/ATAOption" },
      "minItems": 1
    },
    "ATAOption": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "patternProperties": {
        ".*": { "type": "boolean" }
      }
    },
    "CodeTag": {
      "type": "object",
      "additionalProperties": false,
      "required": ["CodeTag"],
      "properties": {
        "CodeTag": {
          "type": "object",
          "additionalProperties": false,
          "required": ["correctAnswer", "choices"],
          "properties": {
            "prompt": { "$ref": "#/definitions/HTML" },
            "correctAnswer": { "$ref": "#/definitions/TagAnswer" },
            "choices": { "enum": ["exam", "question", "part"] },
            "rubric": { "$ref": "#/definitions/Rubrics" }
          }
        }
      }
    },
    "TagAnswer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["filename", "line"],
      "properties": {
        "filename": { "type": "string" },
        "line": { "type": "integer", "minimum": 0 }
      }
    },
    "Text": {
      "type": "object",
      "additionalProperties": false,
      "required": ["Text"],
      "properties": {
        "Text": {
          "oneOf": [
            { "type": "null" },
            { "$ref": "#/definitions/TextPrompt" }
          ]
        }
      }
    },
    "TextPrompt": {
      "type": "object",
      "additionalProperties": false,
      "required": ["prompt"],
      "properties": {
        "prompt": { "$ref": "#/definitions/HTML" },
        "rubric": { "$ref": "#/definitions/Rubrics" }
      }
    }
  }
}
