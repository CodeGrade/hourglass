{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://hourglass.ccs.neu.edu/schemas/grades#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "grades"
  ],
  "properties": {
    "grades": { "$ref": "#/definitions/QuestionGrades" }
  },
  "definitions": {
    "QuestionGrades": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PartGrades"
      }
    },
    "PartGrades": {
      "type": "object",
      "properties": {
        "finished": { "type": "boolean" },
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/BodyItemGrade" }
        }
      }
    },
    "BodyItemGrade": {
      "anyOf": [
        { "$ref": "#/definitions/Deduction" },
        { "$ref": "#/definitions/Comments" }
      ]
    },
    "Deduction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["amount", "grader_id"],
      "properties": {
        "amount": { "type": "number" },
        "grader_id": { "type": "number" }
      }
    },
    "Comments": {
      "type": "array",
      "items": { "$ref": "#/definitions/Comment" }
    },
    "Comment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "deduction",
        "category",
        "comment"
      ],
      "properties": {
        "deduction": { "$ref": "#/definitions/Deduction" },
        "category": { "type": "string" },
        "comment": { "type": "string" }
      }
    }
  }
}
